{
    "name": "@bobosneefdev/zono",
    "version": "6.0.5",
    "packageManager": "bun@1.3.5",
    "description": "Easily create type-safe APIs, clients, and servers with Zod and Hono.",
    "homepage": "https://github.com/bobosneefdev/zono#readme",
    "exports": {
        "./client": {
            "types": "./dist/client.d.ts",
            "import": "./dist/client.mjs",
            "require": "./dist/client.js"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.mjs",
            "require": "./dist/server.js"
        },
        "./shared": {
            "types": "./dist/shared.d.ts",
            "import": "./dist/shared.mjs",
            "require": "./dist/shared.js"
        }
    },
    "scripts": {
        "lint": "biome check --fix --unsafe",
        "format": "biome format --write .",
        "type-check": "tsc --noEmit",
        "build": "tsup",
        "build:full": "bun run lint && bun run format && bun run type-check && bun run build",
        "prepublishOnly": "npm run build:full",
        "test": "bun test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bobosneefdev/zono.git"
    },
    "keywords": [
        "zod",
        "hono",
        "zono"
    ],
    "author": "@bobosneefdev",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bobosneefdev/zono/issues"
    },
    "dependencies": {
        "@biomejs/biome": "^2.3.11",
        "@socket.io/bun-engine": "^0.1.0",
        "@types/bun": "^1.3.5",
        "axios": "^1.13.2",
        "hono": "^4.11.3",
        "socket.io": "^4.8.3",
        "zod": "^4.3.5",
        "zod-openapi": "^5.4.6"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "socket.io-client": "^4.8.3",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "files": [
        "dist",
        "LICENSE"
    ]
}
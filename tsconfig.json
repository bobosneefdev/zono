{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"target": "ES6",
		"moduleResolution": "node",
		"module": "ES6",
		"declaration": true,
		"isolatedModules": true,
		"noEmit": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "dist"]
}

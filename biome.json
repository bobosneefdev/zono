{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/dist",
			"!**/node_modules",
			"!**/package-lock.json",
			"!**/package.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useConst": "error",
				"noUselessElse": "error",
				"noParameterProperties": "error",
				"noYodaExpression": "error",
				"noNonNullAssertion": "off",
				"useImportType": "off",
				"noParameterAssign": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error",
				"noUnusedTemplateLiteral": "error",
				"useNumberNamespace": "error",
				"noInferrableTypes": "error",
				"useConsistentArrayType": {
					"level": "error",
					"options": {
						"syntax": "generic"
					}
				},
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"patterns": [
							{
								"group": ["src/**/*"],
								"message": "Use ~/ alias instead of src paths"
							},
							{
								"group": ["../../**/*"],
								"message": "Use ~/ alias instead of distant relative paths"
							},
							{
								"group": ["../**/*", "!../**/*.js"],
								"message": "Use *.js extension when importing from files"
							},
							{
								"group": ["./**/*", "!./**/*.js"],
								"message": "Use *.js extension when importing from files"
							},
							{
								"group": ["~/**/*", "!~/**/*.js"],
								"message": "Use *.js extension when importing from files"
							},
							{
								"group": ["dist/**/*", "dist"],
								"message": "Don't import from dist"
							}
						]
					}
				},
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"requireAscii": false,
						"filenameCases": ["snake_case"]
					}
				}
			},
			"suspicious": {
				"noDoubleEquals": "error",
				"noExportsInTest": "error",
				"noImportAssign": "error",
				"noExplicitAny": "off",
				"noThenProperty": "off",
				"noVar": "error",
				"noConfusingVoidType": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noCommaOperator": "error"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"quoteStyle": "double",
			"quoteProperties": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"semicolons": "always",
			"trailingCommas": "all"
		},
		"linter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useFilenamingConvention": "off",
						"noRestrictedImports": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
